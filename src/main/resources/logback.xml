<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Pattern definition -->
    <property name="DEFAULT_PATTERN" value="%d{(yyyy-MM-dd -- HH:mm:ss.SSS)} [%t] |-%-5level [%logger{36}.%M:%-3line]     %msg%n"/>

    <!-- Log level from environment variable, default to INFO -->
    <property name="LOG_LEVEL" value="${LOG_LEVEL:-INFO}"/>

    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${DEFAULT_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- File appender with rotation -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>appdata/logs/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>appdata/logs/app.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <totalSizeCap>200MB</totalSizeCap>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${DEFAULT_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Root logger with environment-driven level -->
    <root level="${LOG_LEVEL}">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
